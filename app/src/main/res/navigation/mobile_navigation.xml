<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.joerakhimov.smartexpenses.screen.main.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_expenses"
        android:name="com.joerakhimov.smartexpenses.screen.main.expenses.ExpensesFragment"
        android:label="@string/my_expenses"
        tools:layout="@layout/fragment_expenses" />

    <fragment
        android:id="@+id/navigation_social"
        android:name="com.joerakhimov.smartexpenses.screen.main.social.SocialFragment"
        android:label="@string/social"
        tools:layout="@layout/fragment_social" />

    <fragment
        android:id="@+id/navigation_rates"
        android:name="com.joerakhimov.smartexpenses.screen.main.rates.RatesFragment"
        android:label="@string/rates"
        tools:layout="@layout/fragment_rates" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.joerakhimov.smartexpenses.screen.main.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.joerakhimov.smartexpenses.screen.main.details.DetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/details_fragment" >

        <argument
            android:name="id"
            app:argType="integer"/>

    </fragment>

</navigation>